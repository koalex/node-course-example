        td.edge
            i.browser-img
            h2.browser-name #{oldWin ? 'INTERNET EXPLORER' : 'MICROSOFT EDGE'}
            a.download(href="https://www.microsoft.com/download/details.aspx?id=48126" target="_blank") #{i18n.__('outdatedbrowser.DOWNLOAD')}
            .under
                p #{i18n.__('outdatedbrowser.AVAILABLE')}
                .under-overlay
                ul.systems-list
