  background #00caff
  &:hover
    box-shadow inset 0 0 200px lightness(#00caff, 35%)
    transition box-shadow 0.3s linear 0s

:global(.outdatedbrowser.table td.edge .download:hover)
  color #00caff

:global(.outdatedbrowser.table td.edge .browser-img)
  background-position-x -200px


// SAFARI
:global(.outdatedbrowser.table td.safari)
  background #00a0e6
  &:hover
    box-shadow inset 0 0 200px lightness(#00a0e6, 35%)
    transition box-shadow 0.3s linear 0s

:global(.outdatedbrowser.table td.safari .download:hover)
  color #00a0e6

:global(.outdatedbrowser.table td.safari .browser-img)
  background-position-x -300px


// YANDEX
:global(.outdatedbrowser.table td.yandex)
  background saturation(#f25648, 200%)
