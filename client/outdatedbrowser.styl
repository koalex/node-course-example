:global(.table td.opera .browser-img)
  background-position-x -400px

:global(.systems-list)
  position absolute
  bottom 0
  left 0
  width 100%

:global(.systems-list-item)
  display inline-block
  margin-right 5px

:global(.systems-list-item > i)
  display inline-block
  width 25px
  height 25px
  background-image url('./assets/img/outdatedbrowsers_systems.png')
  background-position-x -999999px
  background-position-y 0
  background-repeat-x no-repeat
  background-repeat-y no-repeat
  background-size auto 25px

:global(.systems-list-item > i.windows)
  background-position-x 0

:global(.systems-list-item > i.apple)
  background-position-x -25px

:global(.systems-list-item > i.linux)
  background-position-x -50px


:global(.table td:hover .browser-img)
  background-position-y -100px